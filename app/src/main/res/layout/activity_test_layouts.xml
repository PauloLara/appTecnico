<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <Button
        android:id="@+id/btnDelList"
        android:layout_width="0dp"
        android:layout_height="168dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:background="@drawable/meio_futsal"
        android:text="delete from list"
        android:onClick="btnIrDeleteList"
        app:layout_constraintBottom_toTopOf="@+id/btnDragDrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDragDrop"
        android:layout_width="0dp"
        android:layout_height="168dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:onClick="btnIrDragAndDrop"
        android:background="@drawable/meio_futebol"
        android:text="drag and drop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnDelList"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnDesenhar"
        android:layout_width="0dp"
        android:layout_height="168dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="1dp"
        android:background="@drawable/meio_futsal"
        android:text="Desenhar tÃ¡tica em quadra"
        android:onClick="btnIrDesenhoQuadra"
        app:layout_constraintTop_toBottomOf="@+id/btnDragDrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>