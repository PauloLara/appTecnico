    <Button
        android:id="@+id/btngraficos"
        android:layout_width="0dp"
        android:layout_height="135dp"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="1dp"
