<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cadastro"
    android:background="@drawable/b">

    <EditText
        android:id="@+id/name"
        android:layout_width="333dp"
        android:layout_height="47dp"
        android:layout_marginEnd="58dp"
        android:layout_marginLeft="62dp"
        android:layout_marginRight="58dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="135dp"
        android:ems="10"
        android:hint="@string/nome"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/mail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.51" />

    <EditText
        android:id="@+id/mail"
        android:layout_width="333dp"
        android:layout_height="47dp"
        android:layout_marginEnd="58dp"
        android:layout_marginLeft="62dp"
        android:layout_marginRight="58dp"
        android:layout_marginStart="62dp"
        android:ems="10"
        android:hint="@string/e_mail"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/key"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <EditText
        android:id="@+id/key"
        android:layout_width="333dp"
        android:layout_height="47dp"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="58dp"
        android:layout_marginLeft="62dp"
        android:layout_marginRight="58dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:hint="@string/senha"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/key_again"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mail" />

    <EditText
        android:id="@+id/key_again"
        android:layout_width="333dp"
        android:layout_height="47dp"
        android:layout_marginBottom="23dp"
        android:layout_marginEnd="58dp"
        android:layout_marginLeft="62dp"
        android:layout_marginRight="58dp"
        android:layout_marginStart="62dp"
        android:layout_marginTop="1dp"
        android:ems="10"
        android:hint="@string/digite_novamente_a_senha2"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/contrato"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/key" />

    <TextView
        android:id="@+id/contrato"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginEnd="27dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="27dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="22dp"
        android:text="@string/voc_aceita_o_contrato_de_usu_rio"
        android:textColor="@android:color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/cadastrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.58"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/key_again" />

    <Button
        android:id="@+id/cadastrar"
        android:layout_width="333dp"
        android:layout_height="47dp"
        android:layout_marginBottom="37dp"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="1dp"
        android:background="@color/colorPrimaryDark"
        android:text="@string/cadastrar"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/ou"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contrato" />

    <TextView
        android:id="@+id/ou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="124dp"
        android:layout_marginLeft="132dp"
        android:layout_marginRight="124dp"
        android:layout_marginStart="132dp"
        android:text="@string/ou2"
        app:layout_constraintBottom_toTopOf="@+id/jasou"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/jasou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="115dp"
        android:layout_marginLeft="105dp"
        android:layout_marginRight="115dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="9dp"
        android:background="@android:color/transparent"
        android:onClick="clickBtnJaTenho"
        android:text="@string/j_sou_cadastrado"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ou" />


</android.support.constraint.ConstraintLayout>