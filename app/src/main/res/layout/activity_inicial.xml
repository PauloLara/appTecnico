<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inicial">


    <TableLayout
        android:id="@+id/table"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="left">

                <TextView
                    android:id="@+id/TextViewUserEmail"
                    android:layout_width="200dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginRight="40dp" />

                <Button
                    android:id="@+id/logout"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/logout"
                    android:onClick="clickBtnLogout"
                    tools:ignore="OnClick" />
            </TableRow>
        </TableLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnnovojogo"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:background="#CEF1CF"
                android:onClick="clickBtnIrPartidaConfig"
                android:text="@string/novo_jogo"
                tools:ignore="OnClick" />

            <Button
                android:id="@+id/btnestatisticas"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_alignParentBottom="false"
                android:layout_centerHorizontal="false"
                android:background="#81A36B"
                android:onClick="clickBtnIrEstatisticas"
                android:text="@string/estatisticas" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btncadastros"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_alignParentBottom="false"
                android:layout_centerHorizontal="false"
                android:background="@android:color/darker_gray"
                android:onClick="clickBtnIrSistema"
                android:text="cadastrar" />

            <Button
                android:id="@+id/btngraficos"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_alignParentBottom="false"
                android:layout_centerHorizontal="false"
                android:background="#C2B78D"
                android:onClick="clickBtnIrGraficos"
                android:text="@string/graficos" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btnexcluir"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_alignParentBottom="false"
                android:layout_centerHorizontal="false"
                android:background="@color/colorPrimaryDark"
                android:onClick="clickBtnDeletar"
                android:text="excluir" />

            <Button
                android:id="@+id/btntestes"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_alignParentBottom="false"
                android:layout_centerHorizontal="false"
                android:background="#5d6cbd"
                android:onClick="clickBtnIrTestLayouts"
                android:text="TESTES"
                tools:ignore="OnClick" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btncronometro"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_alignParentBottom="false"
                android:layout_centerHorizontal="false"
                android:background="#67CA51"
                android:onClick="clickBtnCronometro"
                android:text="cronômetro" />

            <Button
                android:id="@+id/btntatica"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_alignParentBottom="false"
                android:layout_centerHorizontal="false"
                android:background="#E7B54B"
                android:onClick="clickBtnIrTestLayouts"
                android:text="táticas"
                tools:ignore="OnClick" />

        </TableRow>
    </TableLayout>

    <!--<android.support.v4.view.ViewPager
        android:id="@+id/carrossel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/table">
    </android.support.v4.view.ViewPager>-->

</android.support.constraint.ConstraintLayout>
</ScrollView>